<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reveal_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="00dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/cat1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cat1i"
                android:background="@drawable/cat1"
                android:clickable="true"
                android:onClick="selectCat"/>
            <TextView
                android:id="@+id/cat1t"
                android:onClick="selectCat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:text="Alimentari e cura della persona" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cat2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cat2i"
                android:background="@drawable/cat2"
                android:clickable="true"
                android:onClick="selectCat"/>
            <TextView
                android:id="@+id/cat2t"
                android:onClick="selectCat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:text="Libri, film, musica" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cat3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cat3i"
                android:background="@drawable/cat3"
                android:clickable="true"
                android:onClick="selectCat"/>
            <TextView
                android:id="@+id/cat3t"
                android:onClick="selectCat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:gravity="center"
                android:text="Elettronica, informatica e giochi" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/cat4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cat4i"
                android:background="@drawable/cat4"
                android:clickable="true"
                android:onClick="selectCat"/>

            <TextView
                android:id="@+id/cat4t"
                android:onClick="selectCat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:gravity="center"
                android:text="Casa, giardino e fai da te" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cat5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cat5i"
                android:background="@drawable/cat5"
                android:clickable="true"
                android:onClick="selectCat"/>
            <TextView
                android:id="@+id/cat5t"
                android:onClick="selectCat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:gravity="center"
                android:text="Sport, auto e tempo libero" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cat6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="70dp"
                android:id="@+id/cat6i"
                android:layout_height="70dp"
                android:background="@drawable/cat6"
                android:clickable="true"
                android:onClick="selectCat"/>

            <TextView
                android:id="@+id/cat6t"
                android:onClick="selectCat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:gravity="center"
                android:text="Vestiario, scarpe e accessori" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>